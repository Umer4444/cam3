                        <div class="club-page form-group">
                            <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                <h5><strong>POPULAR CLUBS</strong></h5>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    {{ related(newInstance('Videos\\Entity\\Video'), 'clubsList', constant('PerfectWeb\\Core\\View\\Helper\\Related::TYPE_POPULAR')) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
