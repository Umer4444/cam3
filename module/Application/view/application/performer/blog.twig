{% extends 'layout/profile' %}
{% block content %}
    {% set counter = 0 %}
    <div class="blog-content col-sm-12">
        {% for blog in user.getBlogPosts() %}
            {%  set counter = counter + 1 %}
            {% if counter == 1 %}
                {% include 'blog/item-big' %}
            {%  else %}
                {% include 'blog/item-small' %}
            {%  endif %}
        {% endfor %}
    </div>
{% endblock content %}