<div class="col-sm-3">
    <div class="panel panel-friend">
        <a href="{{ user(user).url('performer/profile') }}">
            <div class="panel-heading">
                <h3 class="panel-title">
                    {{ user|slice(0, 16) }}
                </h3>
            </div>
            <div class="panel-body">
                <img class="friends-image" src="{{ user.getAvatar() ?: '/assets/defaults/users/avatar-default.jpg' }}" title="{{ user }}"/>
            </div>
        </a>
    </div>
</div>