{% for performer in cams %}

{% set age = date('NOW').diff(performer.getBirthday()) %}

<div class="col-lg-3 col-sm-6 col-md-3 col-xs-12  block-box">
    <div class="box-shadow cam-sharing">
        <div class="sharing-name">
            <h3 class="text-left">{{ performer.name }}</h3>
            <small>{{ age.y }} yrs</small>
            <span class="vip"><img src="/assets/images/vip.png" alt="vip"></span>
        </div>
        <div class="sharing-img">
            <img src="{{ performer.getAvatar() }}" alt="image" class="img-responsive">
        </div>
        <div class="media">
            <div class="media-left sharing-since">
                <h3>Sharing Since</h3>
            </div>
            <div class="media-body">
                <div class="sharing-date">
                    <h4>{{ performer.joined.format('d-M-y') }}</h4>
                </div>
                <p><strong>Viewers Now</strong>: 208</p>
                <p><strong>Total Views</strong>: 2538</p>
            </div>
        </div>
        <div class="text-center cam_btn">
            {{ user(performer).buttons().profile() }}
        </div>
    </div>
</div>

{% endfor %}
