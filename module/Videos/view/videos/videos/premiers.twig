{% extends 'layout/frontend' %}

{% block content %}

    <div class="row">

        <div class="primers-block form-group">
            <div class="row">
                <div class="col-sm-6">
                    <h2 class="white"><strong>Studio with Schedule Premiers</strong></h2>
                </div>
                <div class="col-sm-6">
                    <h2 class="white">
                        <img src="/assets/images/studio-logo.png" class="img-responsive">
                    </h2>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        {% block timezoneSelect %}
            {{ timezone() }}
        {% endblock %}

        <div class="primers-block form-group">
            {{ related(newInstance('Videos\\Entity\\PremiereVideo'), 'partial/premier', constant('PerfectWeb\\Core\\View\\Helper\\Related::TYPE_LATEST'), null, 10) }}
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            for (var i=0; i<$('.timer').length; i++) {
                console.log($('.timer').eq(i));
                $('.timer').eq(i).FlipClock();
            }
        });
    </script>

{% endblock %}
